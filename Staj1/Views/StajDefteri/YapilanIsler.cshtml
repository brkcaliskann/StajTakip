<script>
    function GunlukSil(id) {

        if (confirm('Günlük Sayfası Silinsin Mi?')) {
            var model = {
                "id": id
            };

            $.ajax({
                url: '/StajDefteri/GunSil',
                type: "POST",
                data: model,
                success: function (result) {
                    alert("Günlük Sayfası Başarıyla Silindi")
                    location.reload();
                }
            });

        }
    }
</script>

